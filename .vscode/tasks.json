{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Prepare Device for Launch",
			"type": "shell",
			"command": "${workspaceFolder}/.vscode/select_device.sh",
			"args": [
				"${input:deviceSelection}"
			],
			"problemMatcher": []
		},
		{
			"label": "Start IOS Emulator",
			"type": "shell",
			"command": "flutter emulators --launch apple_ios_simulator && sleep 10",
			"isBackground": false,
			"problemMatcher": []
		},
		{
			"label": "Start Android Emulator",
			"type": "shell",
			"command": "flutter emulators --launch Pixel_8_API_35",
			"isBackground": true,
			"problemMatcher": [
				{
					"owner": "flutter",
					"pattern": [
						{
							"regexp": ".",
							"file": 1,
							"location": 1,
							"message": 1
						}
					],
					"background": {
						"activeOnStart": true,
						"beginsPattern": "Waiting for emulator to start...",
						"endsPattern": "Emulator.*started"
					}
				}
			]
		}
	]
}
